	keywords = {Adaptation, Biological, Amino Acid Sequence, Animals, Antibody Formation, Base Sequence, Biological Clocks, Biological Evolution, DNA, Environment, Gene Expression Regulation, Models, Genetic, Mutation, Peptides, Probability},
