	author = {Deveugele, Myriam and Silverman, Jonathan},
	year = {2017},
	pmid = {28641993},
	note = {Publisher: Elsevier Ireland Ltd},
	keywords = {Conference submissions, Peer-review, Reliability},
	pages = {2147--2150},
}

