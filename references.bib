	journal = {Cochrane Database of Systematic Reviews},
	author = {Jefferson, Tom and Rudin, Melanie and Folse, Suzanne Brodney and Davidoff, Frank},
	year = {2007},
	pmid = {17443635},
	keywords = {Biomedical research [*standards], Peer review, research [*standards]},
}

@article{Jackson2011,
