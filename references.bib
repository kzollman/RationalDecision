	keywords = {Amino Acid Sequence, Animals, Antigens, Immunity, Immunoglobulin Constant Regions, Immunoglobulin Variable Region, Killer Cells, Natural, Lymphocyte Activation, Models, Theoretical, Molecular Sequence Data, Mutation, Selection, Genetic},
	pages = {211--245},
}

