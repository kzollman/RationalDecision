	author = {Nguyen, C. Thi},
	month = jul,
	year = {2020},
	keywords = {Aesthetic testimony, Echo chambers, Epistemic dependence, Epistemology of testimony, Expertise, Moral testimony, Social epistemology, Testimony, Trust},
	pages = {2803--2821},
}

@article{madsen2018,
