	pmid = {25285376},
	keywords = {CONSORT, Clinical training, EBM, Evidence based medicine, Medical education, Peer review, RCT, Randomized controlled trials, Reporting guidelines},
	pages = {1--7},
}

@article{Deveugele2017,
	title = {Peer-review for selection of oral presentations for conferences: {Are} we reliable?},
